<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="40.73581"
        mapbox:mapbox_cameraTargetLng="-73.99155"
        mapbox:mapbox_cameraZoom="1"
        mapbox:mapbox_styleUrl="mapbox://styles/mapbox/outdoors-v10" />

    <TextView
        android:id="@+id/latlon_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="@dimen/latlon_text_margin_bottom"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:paddingEnd="@dimen/latlon_text_padding_start"
        android:paddingStart="@dimen/latlon_text_padding_start"
        android:textColor="@android:color/white"
        android:textSize="@dimen/latlon_text_size" />

</FrameLayout>

